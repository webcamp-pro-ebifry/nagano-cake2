<h1>Admins::Products#index</h1>
<p>Find me in app/views/admins/products/index.html.erb</p>
<div class="cotainer">

<div class="row">

<div class="col-xs-9">

<h2>商品一覧</h2>

<%= flash[:notice] %>

<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>商品名</th>
			<th>税抜き価格</th>
			<th>ジャンル</th>
			<th>ステータス</th>
		</tr>
	</thead>

	<tbody>
		<% @products.each do |product| %>
			<tr>
				<td><%= product.id %></td>
				<td>
                	<%= link_to admins_product_path(product.id) do %>
					<%= product.name %>
					<% end %>
		    	</td>
            	<td><%= product.price %></td>
            	<td><%= product.genre_id %></td>
            	<td>ステータス</td>
			</tr>
		<% end %>
	</tbody>
</table>
<%= paginate @products %>
</div>
</div>
</div>