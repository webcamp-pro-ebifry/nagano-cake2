<div class="container">
  <div class="row">
    <div class="col-xs-5">
      <h2>新規登録</h2>
        <div class="new">
            <%= form_for(@product, url: admins_products_path) do |f| %>
                <div>
                    <%= f.attachment_field :image, placeholder: "" %>
                </div>
                <div>
                    <span>商品名</span>
                    <%= f.text_field :name, class:"form-control" %>
                </div>
                <div>
                    <span>商品説明</span>
                    <%= f.text_area :introduce, class:"form-control" %>
                </div>
                <div>
                    <span>ジャンル</span>
                    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
                </div>
                <div>
                    <span>税抜き価格</span>
                    <%= f.text_field :price, class:"form-control" %>
                </div
                <div>
                    <span>販売ステータス</span>
                    <%= f.select(:product_status, {'販売中': '販売中', '売り切れ': '売り切れ'}, {include_blank: "選択して下さい"}) %>
        
                </div>

                
                <span>
                    <%= f.submit "新規登録", class:"btn btn-primary btn-md btn-block btn-base-1 mt-20" %>
                    </span>
            <% end %>
        </div>
    </div>
  </div>
</div>

