<div class="container">
  <div class="row">
    <div class="col-xs-5">
      <h2>ジャンル一覧・追加</h2>
      <div class="new">
        <%= form_for(@genre, url:admins_genre_path(@genre)) do |f| %>
                <%= f.text_field :name, class:"form-control", placeholder:"Name" %>
                <span>有効</span><%= f.radio_button :status, :valid %>
                <span>無効</span><%= f.radio_button :status, :invalid %>
                <%= f.submit "変更を保存する", class:"btn btn-primary btn-md btn-block btn-base-1 mt-20" %>
        <% end %>
    　　</div>
    </div>
　</div>
</div>


