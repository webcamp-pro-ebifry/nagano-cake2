<div class="container">
  <div class="row">
    <div class="col-xs-5">
      <h2>ジャンル一覧・追加</h2>
      <div class="new">
        <%= form_for(@genre, url: admins_genres_path) do |f| %>
                <h4>ジャンル</h4>
                <%= f.text_field :name, class:"form-control" %>
                <span class="fa fa-building form-control-icon" aria-hidden="true"></span>
                    <span>有効</span><%= f.radio_button :status, 0 %>
                    <span>無効</span><%= f.radio_button :status, 1 %>
                <span>
                <%= f.submit "追加", class:"btn btn-primary btn-md btn-block btn-base-1 mt-20" %>
                </span>
        <% end %>
    </div>



    <table class="table">
        <thead>
        <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.name %></td>         
            <td><%= genre.status_i18n %></td>
            <td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
        </tr>
        <% end %>
        </tbody>
    </table>
  
    </div>
  </div>
</div>


