<div class="container">
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-10">
			<h2>注文履歴一覧</h2>
			<table class="table">
				<thead>
					<tr>
						<th>購入日時</th>
						<th>購入者</th>
						<th>注文個数</th>
						<th>注文ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @orders.each do |f|%>
					<tr>
						<td class="orderday">
							<%= link_to admins_order_path(f) do %>
							<%= f.created_at.strftime('%Y/%m/%d/%H:%M') %>
						    <% end %>
						</td>
						<td><%= f.user.lastname %><%= f.user.firstname %></td>
						<td><%= f.order_details.sum(:count) %></td>
						<td><%= f.status %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-lg-1"></div>
	</div>
</div>