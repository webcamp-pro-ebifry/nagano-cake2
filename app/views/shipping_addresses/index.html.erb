<div class="cotainer">
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-2">
		<h3>配送先登録/一覧</h3>
		</div>
		<div class="col-lg-8"></div>
	</div>
	<div class="row"  style="margin-top: 20px;">
		<div class="col-lg-1"></div>
		<%= form_for(@shipping) do |f| %>
		<div class="col-lg-4">
			<%=f.label :郵便番号%>
			<%=f.text_field :postcode %>
		</div>
		<div class="col-lg-7"></div>
	</div>
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-7">
			<%=f.label :住所%>
			<%=f.text_field :address, class:"form-control" %>
		</div>
		<div class="col-lg-4"></div>
	</div>
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-4">
			<%=f.label :宛名%>
			<%=f.text_field :name%>
		</div>
		<div class="col-lg-3"></div>
		<div class="col-lg-2"><%=f.submit class:"btn btn-success btn-md btn-block btn-base-1 mt-20"%></div>
		<div class="col-lg-2" style="margin-bottom: 100px;"></div>
	</div>


	<% end %>

	<div class="row">
		<div class="col-lg-1"></div>
		<div class="col-lg-9">
			<table class="table table-hover table table-bordered">
				<thead>
					<tr>
						<th>郵便番号</th>
						<th>住所</th>
						<th>宛名</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<% @shippings.each do |f| %>
					<tr>
						<td><%= f.postcode %></td>
						<td><%= f.address %></td>
						<td><%= f.name %></td>
						<td><%= link_to "編集する",edit_shipping_address_path(f.id), class:"btn btn-primary btn-md btn-block btn-base-1 mt-20" %></td>
						<td><%= link_to "削除する", shipping_address_path(f.id) , method: :delete, "data-confirm" => "Are you sure?", class:"btn btn-danger btn-md btn-block btn-base-1 mt-20" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>