<h2>配送先登録/一覧</h2>
<%= form_for(@shipping) do |f| %>
	<div class="">
		<%=f.label :郵便番号%>
		<%=f.text_field :postcode %>
	</div>

	<div class="">
		<%=f.label :住所%>
		<%=f.text_field :address %>
	</div>

	<div class="">
		<%=f.label :宛名%>
		<%=f.text_field :name%>
	</div>

	<%=f.submit%>

<% end %>
			<!--books一覧 -->
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>郵便番号</th>
						<th>住所</th>
						<th>宛名</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @shippings.each do |f| %>
					<tr>
						<td><%= f.postcode %></td>
						<td><%= f.address %></td>
						<td><%= f.name %></td>
						<td><%= link_to "Edit",edit_shipping_address_path(f.id) %></td>
						<td><%= link_to "Destroy", shipping_address_path(f.id) , method: :delete, "data-confirm" => "Are you sure?" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>