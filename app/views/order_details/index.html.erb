<p id="notice"><%= notice %></p>

<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払い金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.postcode %><br>
          <%= order.address %><br>
          <%= order.name %><br>
        </td>
        <td>
          <% order.order_details.each do |order_detail|%>
          <%= order_detail.product.name %><br>
          <% end %>
          </td>
        <td><%= order.payment %></td>
        <td><%= order.status %></td>
        <td><%= link_to '表示する', order_detail_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @orders %>
<br>

