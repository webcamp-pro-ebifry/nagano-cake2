<p id="notice"><%= notice %></p>
<div class="container order_detail">
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-7">
      <h2>注文履歴一覧</h2>
        <h4>注文内容</h4>
        <table class="table">
        <tr>
          <td>購入者</td>
          <td><%= @order.created_at.strftime('%Y/%m/%d/%H:%M') %></td>
        </tr>
        <tr>
          <td>配送先</td>
          <td>
            <%= @order.postcode %>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <td>支払い方法</td>
          <td>
            <% if @order.payment_method == true %>
                        <p>銀行振込</p>
                          <% else %>
                        <p>クレジットカード</p>
                  <% end %>
          </td>
        </tr>
        <tr>
          <td>注文ステータス</td>
          <td>
            <%= @order.status %>
          </td>
        </tr>
      </table>
    </div>
    <div class="col-lg-3 order_details">
    <h4>請求情報</h4>
      <table class="table">
      <tr>
          <th>商品合計</th>
          <td>
            <%= @order.payment - @order.postage %>
          </td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.payment %></td>
        </tr>
      </table>          
    </div>
    <div class="col-lg-1"></div>
  </div>
  <div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-7">
    <h4>注文内容</h4>
      <table class="table">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_details.each do |f| %>
          <tr>
           <td><%= f.product.name %></td>
           <td><%= (f.product.price * 1.1).round %></td>
           <td><%= f.count %></td>
           <td><%= (f.product.price * 1.1 * f.count).round %></td>
          </tr>
        <% end %>
      </tbody>
      </table>       
    </div>
    <div class="col-lg-4"></div>

  </div>
</div>






