                    <% end %>
                  </td>
    <span>お届け先</span>
    <span><%= @order.postcode %></span>
    <%= @order.address %><br>
    <%= @order.name %>様
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-5"></div>
    <div class="col-lg-2">
      <%= form_with(model: @order, url:orders_path, method: :post, local: true) do |f| %>


  <% i = 0 %>
