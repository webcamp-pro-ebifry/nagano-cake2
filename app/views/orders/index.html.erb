          <tr>
            <th>送料</th>
            <th>商品合計（税込）</th>
            <th>請求金額</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @order.postage %>円</td>
            <td><%= (i * 1.1).round %>円</td>
            <td>
              <%= (i * 1.1).round + @order.postage %>円</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-9 order-index">
    <span>支払い方法</span>
     <% if @order.payment_method == true %>
                      <span>銀行振込</span>
                        <% else %>
