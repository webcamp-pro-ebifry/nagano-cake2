


<h1>注文情報入力</h1>

    <%= form_with model: @order, url: orders_index_path, method: :post , local: true do |f|%>

      <strong><p>支払い方法</p></strong>
      <%= f.radio_button  :payment_method, false %><span>クレジットカード</span>
      <%= f.radio_button  :payment_method, true %><span>銀行振込</span>



    <strong><p>お届け先</p></strong>


    <%= radio_button_tag :address, "1" %>
    <%= label_tag :address,"ご自身の住所",{value: :"1"}%>
    〒<%= @user.postal_code%>
   　 <%= @user.address %>

<br>
    <%= radio_button_tag :address, "2"%>
    <%= label_tag :address,"登録済み住所から選択",{value: :"2"}%>
    <%= f.collection_select :select_address , @shipping_address, :id, :address %>

<br>
    <%= radio_button_tag :address, "3"%>
    <%= label_tag :address,"新しいお届け先",{value: :"3"}%>

    	<%= f.label :郵便番号 %>
    	<%= text_field_tag 'shipping_address[postcode]' %>
    	<%= f.label :住所 %>
    	<%= text_field_tag 'shipping_address[address]' %>
    	<%#= f.text_field :address %>
    	<%= f.label :宛名 %>
    	<%= text_field_tag 'shipping_address[name]' %>
    	<%#= f.text_field :name %>
<br>
    <%= f.submit "確認画面へ進む",class: "btn btn-primary "%>
<% end %>


