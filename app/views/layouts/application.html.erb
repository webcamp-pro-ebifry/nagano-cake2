<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<header>
  <nav>
    <ul>
      <% if user_signed_in? %>
        <li><%= link_to "マイページ", homes_top_path %></li>
        <li><%= link_to "カート", homes_top_path %></li>
        <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
      <% elsif admin_signed_in? %>
        <li><%= link_to "商品一覧", admins_products_path %></li>
        <li><%= link_to "会員一覧", admins_users_path %></li>
        <li><%= link_to "注文履歴一覧", homes_top_path %></li>
        <li><%= link_to "ジャンル一覧", admins_genres_path %></li>
        <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
      <% else %>

        <li><%= link_to "About", homes_about_path %></li> 
     <!-- 一旦ログイン画面に遷移するようにしてます -->
        <li><%= link_to "商品一覧", new_user_registration_path %></li>
      <!--  -->
        <li><%= link_to "新規登録", new_user_registration_path %></li>
        <li><%= link_to "ログイン", new_user_session_path %></li>
        <li><%= link_to "管理者はコチラ", new_admin_session_path %></li>
      <% end %>
    </ul>
  </nav>
</header>

    <%= yield %>
  </body>
</html>
